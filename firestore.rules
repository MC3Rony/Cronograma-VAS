rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Reglas para la colección de cronograma
    match /cronograma/{document} {
      // Permitir lectura a todos (puedes cambiar esto si necesitas autenticación)
      allow read: if true;

      // Para escritura, puedes agregar autenticación más adelante:
      // allow write: if request.auth != null;

      // Por ahora, permitir escritura con validación de datos
      allow write: if request.resource.data.keys().hasAll(['lista'])
                   && request.resource.data.lista is list
                   && request.resource.data.lista.size() >= 0;
    }

    // Denegar acceso a todas las demás colecciones por defecto
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
